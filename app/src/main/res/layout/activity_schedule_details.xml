<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<!--
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/logo" />
-->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="?actionBarSize"
                android:padding="@dimen/appbar_padding"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="#ffffff" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/trainStatus"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardElevation="4dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Train "
                android:id="@+id/trainText"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/segoeui"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/realTrainText"
                android:layout_weight="1.8"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/segoeui"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Date "
                    android:id="@+id/dateText"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/realDateText"
                    android:layout_weight="1.8"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Runs On "
                    android:id="@+id/runsonText"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/realRunsText"
                    android:layout_weight="1.8"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/trainTimetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="4dp"
        card_view:cardCornerRadius="4dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/tableLayout"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Station"
                android:background="@drawable/th_shape"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/segoeui"
                />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Arrival"
                    android:layout_weight="1"
                    android:background="@drawable/th_shape"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/segoeui"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Dep"
                    android:layout_weight="1"
                    android:background="@drawable/th_shape"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/segoeui"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Day"
                    android:layout_weight="1"
                    android:background="@drawable/th_shape"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/segoeui"
                    />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>