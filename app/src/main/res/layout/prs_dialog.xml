<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/century_gothic"
        android:gravity="center"
        android:text="PRS at India Post"
        android:textColor="#391075"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service available at : "
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/century_gothic"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khed, Lanja, Sangmeshwar, Ratnagiri, Oras, Sawantwadi, Malvan, Canacona, Honnavar, Kundapura"
        android:textColor="#000000"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/century_gothic"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRS at other locations : "
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/century_gothic"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panjim CBO (Kadamba Bus Depot), Navel Base Karwar"
        android:textColor="#000000"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/century_gothic"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prsDialog"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#8BC34A"
            android:text="OK"
            android:textStyle="bold"
            android:fontFamily="@font/century_gothic"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>

    </LinearLayout>
</LinearLayout>